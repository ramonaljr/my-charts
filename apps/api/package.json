    "@types/express": "^4.17.21",
    "@types/node": "^20.17.10",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.16",
    "prisma": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
