{
  "name": "nova-charts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm:dev:web\" \"pnpm:dev:api\"",
    "dev:web": "pnpm --filter @nova/web dev",
    "dev:api": "pnpm --filter @nova/api dev",
    "build": "pnpm build:core && pnpm build:api && pnpm build:web",
    "build:core": "pnpm --filter @nova/core build",
    "build:web": "pnpm --filter @nova/web build",
    "build:api": "pnpm --filter @nova/api build",
    "vercel-build": "pnpm --filter @nova/web build"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "next": "^16.0.6",
    "typescript": "^5.6.3"
  }
}
